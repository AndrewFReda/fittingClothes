<h2> Login </h2>

<%= simple_form_for @user, url: url_for(controller: :users, action: :login_user) do |f| %>
  <%= f.input :email, placeholder: 'user@domain.com', input_html: { maxlength: 20 } %>
  <%= f.input :password %>
  <%= f.button :submit, 'Login' %>
<% end %>

<%= link_to "Need to create an account?", new_user_path %>